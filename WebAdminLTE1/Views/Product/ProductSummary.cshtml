@model WebApplication0106.Models.Product

    <div class="well">
        <h3>
            <strong>@Model.Wc_Name</strong>
            <span class="pull-right label label-primary">@Model.Wc_Group.ToString()</span>
        </h3>
        @using (Html.BeginForm("상세보기?", "Cart"))

        {
            <div>
                @Html.Hidden("Wc_Code",Model.Wc_Code)
                @Html.Hidden("returnUrl",Request.Url.PathAndQuery)
                <input type="submit" value="Add to Cart" class="btn btn-success pull-right" />
            </div>

        }
        <span class="lead">@Model.Wo_Status &nbsp;</span>
    </div>