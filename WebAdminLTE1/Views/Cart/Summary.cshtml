@model WebApplication0106.Models.Cart

<!-- Menu toggle button -->
<a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-shopping-cart"></i>
    <span class="label label-warning">@Model.Lines.Sum(x => x.Qty)</span>
</a>
<ul class="dropdown-menu">
    <li class="header">You have @Model.Lines.Sum(x => x.Qty) Items</li>
    <li>
        <!-- Inner Menu: contains the notifications -->
        <ul class="menu">
            <li>
                <!-- start notification -->
                <a href="#">
                    <i class="fa fa-users text-aqua"></i> @Model.ComputeTotalValue().ToString("c")
                </a>
            </li>
            <!-- end notification -->
        </ul>
    </li>
    <li class="footer"><a href="/Cart/Index">View all</a></li>
</ul>