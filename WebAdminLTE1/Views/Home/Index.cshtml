                    string WCJS = "<div class='progress progress-sm vertical active' style='margin-bottom:0px; margin-right:5px;'> <div class='progress-bar progress-bar-red progress-bar-striped' role='progressbar' aria-valuenow='20' aria-valuemin='0' aria-valuemax='100' style='height:"+dataWCJS+"% '> </div></div>";
